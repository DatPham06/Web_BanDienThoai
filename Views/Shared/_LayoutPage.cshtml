<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tên Website</title>
    <link href="~/Content/StyleCSS/LayoutSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <script src="~/Scripts/MyJavaScript/JSLayOut.js"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <div class="site-container">
        <!-- HEADER -->
        <header class="site-header">
            <div class="header-content">
                <!-- Logo Section -->
                <div class="logo-section">
                        <img src="https://raw.githubusercontent.com/DatPham06/webdata/main/dienthoai/dienthoai/unnamed.jpg" alt="Logo" class="logo">
                    <a href="/Home/TrangChu" class="brand-name">PhoneStore</a>
                </div>

                <!-- Search Section -->
                <div class="search-section">
                    <form class="search-form" asp-controller="Search" asp-action="Index" method="get">
                        <input type="text" name="query" class="search-input" placeholder="Tìm kiếm sản phẩm..." />
                        <button type="submit" class="search-btn">Tìm kiếm</button>
                    </form>
                </div>

                <!-- Navigation Section -->
                <div class="nav-section">
                    <div class="dropdown">
                        <a href="#" class="nav-link dropdown-btn">
                            <i class="fa-solid fa-bars"></i>Sản Phẩm
                        </a>
                        <div class="dropdown-content">
                            <a href="#)">Iphone</a>
                            <a href="#)">Xiaomi</a>
                            <a href="#)">SamSung</a>
                            <a href="#)">Huawei</a>
                            <a href="#)">Oppo</a>
                        </div>
                    </div>
                    <a href="#" class="nav-link">
                        <i class="fa-solid fa-cart-shopping"></i>Giỏ hàng
                    </a>
                    <a href="/Home/DangNhap"class="login-btn">
                        <i class="fa-solid fa-circle-user"></i>Đăng nhập
                    </a>
                </div>
            </div>
        </header>

        

        <!-- MAIN CONTENT -->
        <main class="site-main">
            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="site-footer">
            <div class="footer-content">
                <!-- Về chúng tôi -->
                <div class="footer-section">
                    <h3>Về Chúng Tôi</h3>
                    <p>Website thương mại điện tử hàng đầu Việt Nam</p>
                    <p>Địa chỉ: 123 Đường ABC, Quận XYZ, TP.HCM</p>
                    <p>Email: contact@example.com</p>
                    <p>Hotline: 1900-xxxx</p>
                </div>

                <!-- Chính sách -->
                <div class="footer-section">
                    <h3>Chính Sách</h3>
                    <p><a href="#" style="color: white; text-decoration: none;">Chính sách bảo mật</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Điều khoản sử dụng</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Chính sách đổi trả</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Chính sách vận chuyển</a></p>
                </div>

                <!-- Liên kết -->
                <div class="footer-section">
                    <h3>Liên Kết Nhanh</h3>
                    <p><a href="#" style="color: white; text-decoration: none;">Trang chủ</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Sản phẩm</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Giới thiệu</a></p>
                    <p><a href="~/Home/LienHe" style="color: white; text-decoration: none;">Liên hệ</a></p>
                </div>
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4602949547107!2d106.66478987608187!3d10.77601468937278!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752edb765b5c25%3A0x9a3519bdad5a85a3!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBOZ2_huqFpIG5n4buvIC0gVGluIGjhu41jIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCAoSFVGTElUKQ!5e0!3m2!1svi!2s!4v1761226481734!5m2!1svi!2s" 
                            width="600" 
                            height="450" 
                            style="border:0;" 
                            allowfullscreen="" loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade">

                    </iframe>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year - PhoneStore. All rights reserved.</p>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>