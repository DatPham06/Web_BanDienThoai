<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tên Website</title>
    <link href="~/Content/StyleCSS/LayoutSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>
<body>
    <div class="site-container">
        <!-- HEADER -->
        <header class="site-header">
            <div class="header-content">
                <!-- Logo Section -->
                <div class="logo-section">
                        <img src="https://raw.githubusercontent.com/DatPham06/webdata/main/dienthoai/dienthoai/unnamed.jpg" alt="Logo" class="logo">
                    <a href="#" class="brand-name">PhoneStore</a>
                </div>

                <!-- Search Section -->
                <div class="search-section">
                    <form class="search-form" asp-controller="Search" asp-action="Index" method="get">
                        <input type="text" name="query" class="search-input" placeholder="Tìm kiếm sản phẩm..." />
                        <button type="submit" class="search-btn">Tìm kiếm</button>
                    </form>
                </div>

                <!-- Navigation Section -->
                <div class="nav-section">
                    <a href="#" class="nav-link">
                        🛒 Giỏ hàng
                    </a>
                    <a href="#">
                        <button class="login-btn">Đăng nhập</button>
                    </a>
                </div>
            </div>
        </header>

        <!-- BANNER (Optional - có thể bật/tắt theo ViewData) -->
        <div class="site-banner">
            <div class="banner-content">
                <h1>Chào Mừng Đến Với PhoneStore</h1>
                <p>Khám phá những sản phẩm tuyệt vời với giá cả hợp lý</p>
                <a href="#" class="banner-btn">Mua Sắm Ngay</a>
            </div>
        </div>

        <!-- MAIN CONTENT -->
        <main class="site-main">
            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="site-footer">
            <div class="footer-content">
                <!-- Về chúng tôi -->
                <div class="footer-section">
                    <h3>Về Chúng Tôi</h3>
                    <p>Website thương mại điện tử hàng đầu Việt Nam</p>
                    <p>Địa chỉ: 123 Đường ABC, Quận XYZ, TP.HCM</p>
                    <p>Email: contact@example.com</p>
                    <p>Hotline: 1900-xxxx</p>
                </div>

                <!-- Chính sách -->
                <div class="footer-section">
                    <h3>Chính Sách</h3>
                    <p><a href="#" style="color: white; text-decoration: none;">Chính sách bảo mật</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Điều khoản sử dụng</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Chính sách đổi trả</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Chính sách vận chuyển</a></p>
                </div>

                <!-- Liên kết -->
                <div class="footer-section">
                    <h3>Liên Kết Nhanh</h3>
                    <p><a href="#" style="color: white; text-decoration: none;">Trang chủ</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Sản phẩm</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Giới thiệu</a></p>
                    <p><a href="#" style="color: white; text-decoration: none;">Liên hệ</a></p>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year - Tên Website. All rights reserved.</p>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>