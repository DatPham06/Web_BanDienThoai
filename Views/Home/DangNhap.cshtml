
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Đăng kí tài khoản</h2>
<form id="frm-register" action="#" method="post">
    <label for="hoten">Nhập họ tên:</label>
    <input type="text" id="hoten" name="hoten" placeholder="Nhập họ và tên..." required /><br />
    <label for="pass">Nhập mật khẩu:</label>
    <input type="password" id="pass" name="pass" placeholder="Nhập mật khẩu..." required /><br />
    <label for="tuoi">Nhập tuổi:</label>
    <input type="number" id="tuoi" name="tuoi" placeholder="Nhập tuổi..." required />
    <label for="ngaythang">Chọn ngày sinh:</label>
    <input type="date" id="ngaythang" name="ngaythang" required /><br />
    <label for="email">Nhập email:</label>
    <input type="email" id="email" name="email" placeholder="Nhập email..." required /><br />
    <label for="dulieu">Chọn tệp:</label>
    <input type="file" id="dulieu" name="dulieu" required /><br />
    <label for="sothich">Chọn sở thích:</label>
    <input type="checkbox" id="sothich" name="sothich" value="Boiloi" />Bơi lội
    <input type="checkbox" id="sothich" name="sothich" value="Docsach" />Đọc sách
    <input type="checkbox" id="sothich" name="sothich" value="Xemphim" />Xem phim
    <br />
    <label for="gioitinh">Chọn giới tính:</label>
    <input type="radio" id="gioitinh" name="gioitinh" value="nam" />Nam
    <input type="radio" id="gioitinh" name="gioitinh" value="nu" />Nữ
    <br />
    <label for="diachi">Chọn địa chỉ:</label>
    <select name="diachi">
        <option>Quận 10</option>
        <option>Quận 1</option>
        <option>Quận 7</option>
    </select><br />
    <label for="phuong">
        <select name="phuong">
            <optgroup label="Quận 10">
                <option>Phường Hòa Hưng</option>
                <option>Phường Diên Hồng</option>
                <option>Phường 1</option>
            </optgroup>
            <optgroup label="Quận 3">
                <option>Phường 1</option>
                <option>Phường 2</option>
                <option>Phường 3</option>
            </optgroup>
        </select>
    </label><br />
    <input type="search" placeholder="Tìm kiếm..." /><br />
    <input type="reset" value="Xóa toàn bộ nội dung" />
    <input type="submit" value="Gửi" />
    <button>Đăng kí</button>
</form>

